	@echo "  make down              åœæ­¢å¹¶ç§»é™¤å®¹å™¨"
	@echo "  make logs              æŸ¥çœ‹æ—¥å¿—"
	@echo "  make shell             è¿›å…¥ Django å®¹å™¨"
	@echo "  make migrate           æ‰§è¡Œæ•°æ®åº“è¿ç§»"
	@echo "  make createsuperuser   åˆ›å»ºè¶…çº§ç”¨æˆ·"
	@echo "  make celery            å¯åŠ¨ Celery worker"
	@echo "  make worker            åŒä¸Š"
